@model ProductListDto

@{
    ViewData["Title"] = "Product list";
}

<div class="text-center">
    <h1 class="display-5">@ViewData["Title"]</h1>
    <p class="text-end">Common cost: @Model.CommonCost</p>
</div>

<div style="margin-block: 1%;">
@{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="border product-list">
            <div>
                <span><strong>@Model.products[i].Name</strong></span>
                <span>(code: @Model.products[i].Id)</span>
            </div>

            <div>
                <span>Count: @Model.products[i].Count</span>
                <span>Price: @Model.products[i].Price</span>
            </div>
        </div>
    }
}
</div>